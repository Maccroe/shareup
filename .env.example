# ShareUp Environment Configuration
# Copy this file to .env and update with your values

# Server
PORT=3000
NODE_ENV=development

# Timezone Configuration
# Set the timezone for daily room limit resets (default: UTC if not specified)
# This determines when the daily room limit resets (at midnight in the specified timezone)
# 
# Common timezones:
# - America/New_York (Eastern Time - UTC-5/-4)
# - America/Chicago (Central Time - UTC-6/-5)  
# - America/Denver (Mountain Time - UTC-7/-6)
# - America/Los_Angeles (Pacific Time - UTC-8/-7)
# - Europe/London (GMT/BST - UTC+0/+1)
# - Europe/Paris (CET/CEST - UTC+1/+2)
# - Asia/Tokyo (JST - UTC+9)
# - Asia/Kolkata (IST - UTC+5:30)
# - Australia/Sydney (AEST/AEDT - UTC+10/+11)
#
# Full list: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
TIMEZONE=UTC

# MongoDB (Required)
MONGODB_URI=mongodb://localhost:27017/shareup

# JWT Authentication (Required)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Admin Dashboard (Required)
ADMIN_PASSWORD=your_admin_password
ADMIN_SESSION_SECRET=your_session_secret

# Discord Webhook (Optional - for rate limiting notifications)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN
DISCORD_ENABLED=false

# Logging Level (Optional)
LOG_LEVEL=minimal

# Cloudinary Configuration (Optional - for future file storage features)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# WebRTC Configuration (Optional)
# TURN_SERVER_URL=
# TURN_SERVER_USERNAME=
# TURN_SERVER_CREDENTIAL=